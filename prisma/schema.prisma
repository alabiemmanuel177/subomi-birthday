generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model RSVP {
  id         Int      @id @default(autoincrement())
  createdAt  DateTime @default(now())
  name       String
  email      String
  phone      String?
  relation   String?
  attending  Boolean
  gender     String?   // store "MALE" or "FEMALE"
}
